@model IEnumerable<WebBanThuoc.DTOs.Thuoc>


@foreach (var item in Model)
{
	<div class="col-md-4 col-sm-6 ">
		<div class="team-thumb wow fadeInUp" data-wow-delay="0.2s">
			<img src="/img/thuoc110-05-2022-22-41-44-001.jpg" class="img-responsive" alt="">

			<div class="team-info" >
				<div style="width: 230px; height: 50px;overflow: hidden"; text-overflow: ellipsis >
					<h3 >@item.TenThuoc </h3>				
				</div>
				<div class="team-contact-info">
					<p><i class="fa fa-money" aria-hidden="true"></i> Đã bán: @item.DaBan </p>
					<p><i class="fa fa-money" aria-hidden="true"></i> <a href="#" >@item.GiaTien.ToString("#,##0") VNĐ</a></p>
				</div>
				<ul class="social-icon">
					<li><a href="#" class="fa fa-cart-arrow-down add-cart" data-id=@item.Id></a></li>
					<li><a  class="fa fa-search" asp-route-id="@item.Id" asp-action="XemThuoc" asp-controller="Home"></a></li>
				</ul>
			</div>

		</div>
	</div>
}

