

@{
	ViewData["Title"] = "Index";
	Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<p>
	<a class="btn btn-outline-primary add" data-toggle="modal" data-target="#exampleModal">Thêm loại thuốc mới</a>
</p>
<br />
<table class="table">
	<thead>
		<tr>
			<th>
				Id
			</th>
			<th>
				Loại thuốc
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody id="tbody">
		<partial name="lisdata" />
	</tbody>
</table>
<partial name="_Pager" />
<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
			<div class="modal-body" id="body">

			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-secondary" data-dismiss="modal">Tắt</button>
				<button type="button" class="btn btn-primary add-edit" data-dismiss="modal">Thực thi</button>
			</div>
		</div>
	</div>
</div>
@section js{
	<script src="~/admin/PhanLoaiThuoc/PhanLoaiThuoc.js" asp-append-version="true"></script>
}
