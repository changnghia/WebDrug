@model IEnumerable<WebBanThuoc.DTOs.NhaCungCap> 

@{
	ViewData["Title"] = "Index";
	Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
	<a asp-action="ThemNhaCungCap" asp-controller="NhaCungCap" class="btn btn-outline-primary">Thêm nhà cung cấp</a>
</p>
<table class="table">
	<thead>
		<tr>
			<th>
				Id
			</th>
			<th>
				Tên nhà cung cấp
			</th>
			<th>
				Địa chỉ
			</th>
			<th>
				Số diện thoại
			</th>
			<th>
				Gmail
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody id="tbody">
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.Id)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.TenNhaCungCap)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.DiaChi)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.SDT)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Gmail)
				</td>
				<td>
					<button class="btn btn-secondary btn-edit" data-id="@item.Id" data-toggle="modal" data-target="#exampleModal">
						<i class="fa-solid fa-pen-to-square"></i>
						Sửa
					</button>
					<button id="delete" class="btn btn-danger js-delete" data-id="@item.Id">
						<i class="fa fa-trash" aria-hidden="true"></i>
					</button>
				</td>
			</tr>
		}
	</tbody>
</table>
<partial name="_Pager" />
<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
			<div class="modal-body" id="body">
				
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-secondary" data-dismiss="modal">Tắt</button>
				<button type="button" class="btn btn-primary edit-ncc" data-dismiss="modal">Cập nhật</button>
			</div>
		</div>
	</div>
</div>
@section js{
	<script src="~/admin/NhaCungCap/Nhacungcap.js" asp-append-version="true"></script>
}
