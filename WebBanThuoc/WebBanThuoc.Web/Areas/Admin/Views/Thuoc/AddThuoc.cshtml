@model WebBanThuoc.Data.ViewModels.Thuoc.AddEditThuocVM

@{
    ViewData["Title"] = "AddThuoc";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container">
	<div class="row">
		<div class="col-md-6">
			<form asp-action="AddThuoc" method="post" enctype="multipart/form-data">
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>
				<div class="form-group" hidden>
					<label asp-for="Id" class="control-label" hidden></label>
					<input asp-for="Id" class="form-control" value="0" />
					<span asp-validation-for="Id" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="TenThuoc" class="control-label">Tên thuốc</label>
					<input asp-for="TenThuoc" class="form-control" />
					<span asp-validation-for="TenThuoc" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="CongDung" class="control-label">Công dụng</label>
					<input asp-for="CongDung" class="form-control" />
					<span asp-validation-for="CongDung" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="DVT" class="control-label">Đơn vị tính</label>
					<input asp-for="DVT" class="form-control" />
					<span asp-validation-for="DVT" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="Hinh" class="control-label">Hình ảnh</label>
					<input asp-for="Hinh" type="file" class="form-control" accept="*/*" />
					<span asp-validation-for="Hinh" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="GiaTien" class="control-label">Giá </label>
					<input asp-for="GiaTien" class="form-control" />
					<span asp-validation-for="GiaTien" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="SoLuong" class="control-label">Số lượng</label>
					<input asp-for="SoLuong" class="form-control" />
					<span asp-validation-for="SoLuong" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="IdLoaiThuoc" class="control-label">Loại thuốc</label>
					<select asp-for="IdLoaiThuoc" class="form-control">
						<vc:list-plt seleteted-id="@Model?.IdLoaiThuoc" />
					</select>
					<span asp-validation-for="IdLoaiThuoc" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="IdNhaCungCap" class="control-label">Nhà cung cấp</label>
					<select asp-for="IdNhaCungCap" class="form-control">
						<vc:l-ist-ncc seleteted-id="@Model?.IdNhaCungCap" />
					</select>
					<span asp-validation-for="IdNhaCungCap" class="text-danger"></span>
				</div>
				<div class="form-group float-right">
					<input type="submit" value="Thêm mới" class="btn btn-primary" />
				</div>
			</form>
			<div>
				<a asp-action="Index">Back to List</a>
			</div>
		</div>
	</div>
</div>


