@model WebBanThuoc.Data.ViewModels.User.AddUserVM

@{
    Layout = null;
}

<link href="~/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />
<div class="container">
	<div class="row">
		<div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
			<div class="card card-signin my-5 rounded shadow p-3 mb-5 bg-white">
				<h1 class="text-center">Đăng kí tài khoản</h1>
				<form asp-action="SignUp" method="post" id="signup">
					<div asp-validation-summary="ModelOnly" class="text-danger"></div>
					<div class="form-group">
						<label asp-for="UserName" class="control-label">Tên tài khoản</label>
						<input asp-for="UserName" class="form-control username" />
						<span asp-validation-for="UserName" class="text-danger messageusername"></span>
					</div>
					<div class="form-group">
						<label asp-for="Password" class="control-label">Mật khẩu</label>
						<input asp-for="Password" type="password" class="form-control password" />
						<span asp-validation-for="Password" class="text-danger mespw"></span>
					</div>
					<div class="form-group">
						<label asp-for="ConfirmPassword" class="control-label">Nhập lại mật khẩu</label>
						<input asp-for="ConfirmPassword" type="password" class="form-control comfirmpassword" />
						<span asp-validation-for="ConfirmPassword" class="text-danger messcfpw"></span>
					</div>
					<div class="form-group">
						<label asp-for="HoTen" class="control-label">Họ và tên</label>
						<input asp-for="HoTen" class="form-control" />
						<span asp-validation-for="HoTen" class="text-danger"></span>
					</div>
					<div class="form-group">
						<label asp-for="IsAdmin" class="control-label">
							Tài khoản là admin
							<input asp-for="IsAdmin" type="checkbox" />
						</label>

					</div>
				</form>
				<div class="form-group">
					<input type="submit" value="Tạo tài khoản" class="btn btn-primary dangky" />
				</div>
				<a class="mt-2" asp-action="Index" asp-controller="Home" asp-area="Admin">Back to List</a>
			</div>			
		</div>
	</div>
</div>

		<script src="~/layout_admin/js/vendor/jquery-2.2.4.min.js"></script>
		<script src="~/admin/user/user.js" asp-append-version="true"></script>


