@model WebBanThuoc.Data.ViewModels.User.LoginVM

<link href="~/layout_admin/css/bootstrap.min.css" rel="stylesheet" />
<div class="container">
	<div class="row">
		<div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
			<div class="card card-signin my-5 rounded shadow p-3 mb-5 bg-white">
				<h1 class="text-center">Đăng nhập</h1>
				<form asp-action="Login">
					<div asp-validation-summary="ModelOnly" class="text-danger"></div>
					<div class="form-group">
						<label asp-for="UserName" class="control-label"></label>
						<input asp-for="UserName" class="form-control" />
						<span asp-validation-for="UserName" class="text-danger"></span>
					</div>
					<div class="form-group">
						<label asp-for="Password" class="control-label"></label>
						<input asp-for="Password" type="password" class="form-control" />
						<span asp-validation-for="Password" class="text-danger"></span>
					</div>
					<div class="form-group form-check">
						<label class="form-check-label p-1">
							<input class="form-check-input" asp-for="Check" />
							Duy trì đăng nhập
						</label>
					</div>
					<div class="form-group">
						<input type="submit" value="Đăng nhập" class="btn btn-primary" />
					</div>
					<a class="text-primary dangkytaikhoan">Bạn chưa có tài có đăng ký ngay</a>
				</form>
			</div>
		</div>
	</div>
</div>
<script src="~/lib/jquery/jquery.js"></script>
<script>
	$(document).on("click", ".dangkytaikhoan", () => {
		window.location.href='/home/viewsignup'
	})
</script>
